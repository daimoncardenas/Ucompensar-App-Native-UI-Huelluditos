<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- "Toolbar" simple -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary_color"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvStoreLocationsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_locations_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenido con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SubtÃ­tulo -->
            <TextView
                android:id="@+id/tvStoreLocationsSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/store_locations_subtitle"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingBottom="16dp" />

            <!-- Tarjeta tienda Suba -->
            <LinearLayout
                android:id="@+id/cardStoreSuba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/purple_200"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvStoreSubaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_suba_name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvStoreSubaAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_suba_address"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp" />

                <Button
                    android:id="@+id/btnOpenSubaInMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_open_in_maps"
                    android:backgroundTint="@color/accent_color"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Tarjeta tienda Teusaquillo -->
            <LinearLayout
                android:id="@+id/cardStoreTeusaquillo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/primary_color"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvStoreTeusaquilloName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_teusaquillo_name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvStoreTeusaquilloAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_teusaquillo_address"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp" />

                <Button
                    android:id="@+id/btnOpenTeusaquilloInMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_open_in_maps"
                    android:backgroundTint="@color/accent_color"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Tarjeta tienda Villavicencio -->
            <LinearLayout
                android:id="@+id/cardStoreVillavicencio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/teal_700"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvStoreVillavicencioName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_villavicencio_name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvStoreVillavicencioAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_villavicencio_address"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp" />

                <Button
                    android:id="@+id/btnOpenVillavicencioInMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_open_in_maps"
                    android:backgroundTint="@color/accent_color"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
